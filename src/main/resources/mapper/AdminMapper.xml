<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.evaluationSystem.mapper.AdminMapper">

    <resultMap id="BaseResultMap" type="com.evaluationSystem.domain.Admin">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="user_id" column="user_id" jdbcType="INTEGER"/>
            <result property="user_name" column="user_name" jdbcType="VARCHAR"/>
            <result property="use_status" column="use_status" jdbcType="TINYINT"/>
            <result property="is_delete" column="is_delete" jdbcType="TINYINT"/>
            <result property="gmt_create" column="gmt_create" jdbcType="TIMESTAMP"/>
            <result property="gmt_modified" column="gmt_modified" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,user_name,
        use_status,is_delete,gmt_create,
        gmt_modified
    </sql>

    <select id="selectByIdAndPassword" resultType="com.evaluationSystem.domain.Admin">
        select id,user_id,user_name,use_status from evaluation_system_admin where user_id = #{user_id} and password = #{password} and is_delete = 0
    </select>
</mapper>
